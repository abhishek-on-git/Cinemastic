<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.HomeActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_poster"
        android:scaleType="centerCrop" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/card_view_gradient_top"/>

    <Button
        android:id="@+id/fetchMoviesButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/banner_height"
        android:background="@drawable/card_background"
        android:layout_margin="16dp"
        android:text="@string/popular_movies_title"
        android:textColor="@color/white"
        android:textSize="@dimen/banner_text_size"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fetchShowsButton"/>

    <Button
        android:id="@+id/fetchShowsButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/banner_height"
        android:background="@drawable/card_background"
        android:layout_margin="16dp"
        android:text="@string/popular_shows_title"
        android:textColor="@color/white"
        android:textSize="@dimen/banner_text_size"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fetchArtistsButton"/>

    <Button
        android:id="@+id/fetchArtistsButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/banner_height"
        android:background="@drawable/card_background"
        android:layout_margin="16dp"
        android:text="@string/popular_artists_title"
        android:textColor="@color/white"
        android:textSize="@dimen/banner_text_size"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>